@model IEnumerable<Lojinha.MVC.Models.ProdutoFornecedor>
@using Lojinha.MVC.ViewModels

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@Html.Partial("_Pesquisar")

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fornecedor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produto.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>Ações</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProdutoFornecedorId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProdutoFornecedorId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProdutoFornecedorId })
            </td>
        </tr>
    }

</table>
