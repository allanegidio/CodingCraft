@model IEnumerable<Lojinha.MVC.Models.VendaLoja>
@using Lojinha.MVC.ViewModels

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@Html.Partial("_Pesquisar")

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Loja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalVenda)
        </th>
        <th>Ações</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Loja.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalVenda)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.VendaLojaId }) |
                @Html.ActionLink("Details", "Details", new { id = item.VendaLojaId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.VendaLojaId })
            </td>
        </tr>
    }

</table>
