

@model Lojinha.MVC.Models.CompraFornecedor
@using Lojinha.MVC.Models

@using (Html.BeginCollectionItem(nameof(Contabilidade.ComprasFornecedores)))
{
    @Html.HiddenFor(c => c.ContabilidadeId)
    @Html.HiddenFor(c => c.CompraFornecedorId)
    
    <tr>
        <td>
            @Html.DisplayFor(model => model.Fornecedor.Nome)
        </td>
        <td>
            @Html.DisplayFor(model => model.Data)
        </td>
        <td>
            @Html.DisplayFor(model => model.LastroTotal)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", "ComprasFornecedores", new { id = Model.CompraFornecedorId }, null)
        </td>
    </tr>
}

