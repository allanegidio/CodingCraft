@model Estamparia.MVC.Models.Categoria

@{
    ViewBag.Title = "Criar";
    Layout = "~/Views/Shared/_LayoutInk.cshtml";
}


@using (Html.BeginForm("Criar", "Categorias", FormMethod.Post, new { @class= "ink-form ink-formvalidator", data_lang = "pt_PT" })) 
{
	@Html.ValidationSummary(false)

	<h1 class="fw-900">Criar</h1>

	<div class="column-group vertical-gutters">
		<div class="all-50 small-100 tiny-100">
            <div class="column-group">
				<fieldset>
					<legend>Categoria</legend>
					@Html.Partial("_CriarOuEditar", Model)
				</fieldset>
            </div>
        </div>
		<div class="all-100 small-100 tiny-100">
            <div class="column-group vertical-padding">
                <p>
                    <input class="ink-button blue" type="submit" value="Criar" /> |
                    @Html.ActionLink("Voltar para Listagem", "Indice", null, new { @class = "ink-button green" })
                </p>
            </div>
        </div>
	</div>
}

