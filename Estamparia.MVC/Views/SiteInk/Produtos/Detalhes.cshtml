@model Estamparia.MVC.Models.Produto

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_LayoutInk.cshtml";
}

<div class="column-group">
	<div class="all-100 small-100 tiny-100">
		<h1 class="fw-900">Detalhes</h1>

		<h4>Produto</h4>
		<hr />

		<div class="control-group all-50 small-100 tiny-100">
			<div class="column-group">
				<div class="fw-900 all-20">
					@Html.DisplayNameFor(model => model.Nome)
				</div>
				<div class="all-80">
					@Html.DisplayFor(model => model.Nome)
				</div>
				<div class="fw-900 all-20">
					@Html.DisplayNameFor(model => model.Cor)
				</div>
				<div class="all-80">
					@Html.DisplayFor(model => model.Cor)
				</div>
				<div class="fw-900 all-20">
					@Html.DisplayNameFor(model => model.Preco)
				</div>
				<div class="all-80">
					@Html.DisplayFor(model => model.Preco)
				</div>
				<div class="fw-900 all-20">
					@Html.DisplayNameFor(model => model.Estoque)
				</div>
				<div class="all-80">
					@Html.DisplayFor(model => model.Estoque)
				</div>
				<div class="fw-900 all-20">
					@Html.DisplayNameFor(model => model.Tamanho)
				</div>
				<div class="all-80">
					@Html.DisplayFor(model => model.Tamanho)
				</div>
				<div class="fw-900 all-20">
					@Html.DisplayNameFor(model => model.Gola)
				</div>
				<div class="all-80">
					@Html.DisplayFor(model => model.Gola)
				</div>
				<div class="fw-900 all-20">
					@Html.DisplayNameFor(model => model.Categoria)
				</div>
				<div class="all-80">
					@Html.DisplayFor(model => model.Categoria)
				</div>
				<div class="fw-900 all-20">
					@Html.DisplayNameFor(model => model.Estampa)
				</div>
				<div class="all-80">
					@Html.DisplayFor(model => model.Estampa)
				</div>
			</div>
		</div>
	</div>
</div>
<div class="column-group vertical-padding">
    <div class="all-100 small-100 tiny-100">
		<p>
			@Html.ActionLink("Editar", "Editar", null, new { id = Model.ProdutoId, @class = "ink-button blue" }) |
			@Html.ActionLink("Voltar para Listagem", "Indice", null, new { @class = "ink-button green" })
		</p>
    </div>
</div>

