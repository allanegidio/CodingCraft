@model IEnumerable<Estamparia.MVC.Models.Categoria>

@{
    ViewBag.Title = "Indice";
}

<h2 class="display-4 mt-3">Indice</h2>

<p>
    @Html.ActionLink("Criar Novo", "Criar", null, new { @class = "btn btn-primary active"})
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Produtos)
			</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(model => item.Nome)
			</td>
			<td>
				@Html.DisplayFor(model => item.Produtos)
			</td>
			<td>
				@Html.ActionLink("Editar", "Editar", new { id = item.CategoriaId }) |
				@Html.ActionLink("Detalhes", "Detalhes", new { id= item.CategoriaId }) |
				@Html.ActionLink("Excluir", "Excluir", new { id = item.CategoriaId })
			</td>
		</tr>
		}
	</tbody>
</table>


