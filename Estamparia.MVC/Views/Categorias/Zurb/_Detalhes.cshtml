@model Estamparia.MVC.Models.Categoria

@{
    ViewBag.Title = "Detalhes";
}

<div class="grid-x grid-margin-y grid-padding-x">
	<div class="cell">
		<h1>Detalhes</h1>

		<h4>Categoria</h4>
		<hr />

		<dl>
			<dt>
				@Html.DisplayNameFor(model => model.Nome)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Nome)
			</dd>
			<dt>
				@Html.DisplayNameFor(model => model.Produtos)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Produtos)
			</dd>
		</dl>
	</div>

	<div class="cell">
		<p>
			@Html.ActionLink("Editar", "Editar", null, new { id = Model.CategoriaId, @class = "button primary" }) |
			@Html.ActionLink("Voltar para Listagem", "Indice", null, new { @class = "button secondary" })
		</p>
	</div>
</div>
