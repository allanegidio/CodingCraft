@model Estamparia.MVC.Models.Categoria

@{
    ViewBag.Title = "Detalhes";
}

@{
    string layoutValue = Request.Cookies.Get("LayoutName").Value;

    switch (layoutValue)
    {
        case "Bootstrap":
            Html.RenderPartial("Bootstrap/_Detalhes", Model);
            break;

        case "Ink":
            Html.RenderPartial("Ink/_Detalhes", Model);
            break;

        case "Zurb":
            Html.RenderPartial("Zurb/_Detalhes", Model);
            break;

    }
}