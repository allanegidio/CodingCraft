@model Estamparia.MVC.Models.Produto

@{
    ViewBag.Title = "Detalhes";
}

@{
    string layoutValue = Request.Cookies.Get("LayoutName").Value;
    string path = string.Format("{0}/_{1}", layoutValue, ViewBag.Title);

    switch (layoutValue)
    {
        case "Bootstrap":
            Html.RenderPartial(path, Model);
            break;

        case "Ink":
            Html.RenderPartial(path, Model);
            break;

        case "Zurb":
            Html.RenderPartial(path, Model);
            break;

    }
}