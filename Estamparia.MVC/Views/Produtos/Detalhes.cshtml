@model Estamparia.MVC.Models.Produto

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<fieldset>
    <legend>Produto</legend>

    <div class="display-label">Nome</div>
    <div class="display-field">@Model.Nome</div>

    <div class="display-label">Categoria</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Categoria).ToString()</div>
</fieldset>
<p>
    @Html.ActionLink("Editar", "Editar", new { id = Model.ProdutoId }) |
    @Html.ActionLink("Voltar para Listagem", "Indice")
</p>


