@model Estamparia.MVC.Models.Produto

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="form-group">
    @Html.LabelFor(model => model.Nome, new { @class = "col-md-2 control-label" })
	<div class="col-md-10">
		@Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
	</div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Categoria, new { @class = "col-md-2 control-label" })
	<div class="col-md-10">
		@Html.DropDownListFor(model => model.CategoriaId, ((IEnumerable<Estamparia.MVC.Models.Categoria>)ViewBag.Categorias).Select(option => new SelectListItem {
			Text = (option == null ? "None" : option.Nome), 
			Value = option.CategoriaId.ToString(),
			Selected = (Model != null) && (option.CategoriaId == Model.CategoriaId)
		}), "Escolha...", new { @class = "form-control" })
		@Html.ValidationMessageFor(model => model.CategoriaId, "", new { @class = "text-danger" })
	</div>
</div>
