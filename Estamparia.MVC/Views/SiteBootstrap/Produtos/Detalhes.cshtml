@model Estamparia.MVC.Models.Produto

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_LayoutBootstrap.cshtml";
}

<h1 class="display-4 mt-3">Detalhes</h1>

<div>
	<h4 class="mt-3">Produto</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2 text-right">@Html.DisplayNameFor(model => model.Nome)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>
		<dt class="col-sm-2 text-right">@Html.DisplayNameFor(model => model.Cor)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Cor)</dd>
		<dt class="col-sm-2 text-right">@Html.DisplayNameFor(model => model.Preco)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Preco)</dd>
		<dt class="col-sm-2 text-right">@Html.DisplayNameFor(model => model.Estoque)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Estoque)</dd>
		<dt class="col-sm-2 text-right">@Html.DisplayNameFor(model => model.Tamanho)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Tamanho)</dd>
		<dt class="col-sm-2 text-right">@Html.DisplayNameFor(model => model.Gola)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Gola)</dd>
		<dt class="col-sm-2 text-right">@Html.DisplayNameFor(model => model.Categoria)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Categoria)</dd>
		<dt class="col-sm-2 text-right">@Html.DisplayNameFor(model => model.Estampa)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Estampa)</dd>
	</dl>
	<p>
		@Html.ActionLink("Editar", "Editar", new { id = Model.ProdutoId }) |
		@Html.ActionLink("Voltar para Listagem", "Indice")
	</p>
</div>




