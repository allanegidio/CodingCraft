@model Estamparia.MVC.Models.Estampa

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_LayoutBootstrap.cshtml";
}

@{
    string layoutValue = Request.Cookies.Get("LayoutName").Value;

    switch (layoutValue)
    {
        case "Bootstrap":
            Html.RenderPartial("_DetalhesBootstrap", Model);
            break;

        case "Ink":
            Html.RenderPartial("_DetalhesInk", Model);
            break;

        case "Zurb":
            Html.RenderPartial("_DetalhesZurb", Model);
            break;

    }
}


